[flake8]
# Matches black's default line length
max-line-length = 88

# Ignore specific files for line length (E501)
per-file-ignores =
    # Allow long lines in test files
    tests/*.py: E501
    # Allow long lines in setup.py
    setup.py: E501
    # Ignore line length in migrations
    */migrations/*.py: E501
    # Ignore line length in docs
    docs/*.py: E501
    # Ignore line length in config files
    *.yaml: E501
    *.yml: E501
    # Ignore line length in markdown files
    *.md: E501
